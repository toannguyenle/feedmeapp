<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <p id="logo">sign<strong>in</strong></p>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <%= form_for sessions_path do |f|%>
      <%= f.text_field :email, :class => "form-control input-lg" %>
      <%= f.password_field :password, :class => "form-control input-lg" %>
      <%= f.submit "Log In", :class => "btn btn-default btn-lg btn-block", :id => "transparent-button" %>
    <% end %>
  </div>
</div>
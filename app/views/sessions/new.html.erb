
<div class="row">
  <div class="wrapper col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4"> 


<h1>LOG IN</h1>

<%= form_tag sessions_path do %>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], :class => "form-control input-lg" %>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, params[:password], :class => "form-control input-lg" %>

  <div class="spacer25"></div> 
  <div class="actions"><%= submit_tag "Log In", :class => "btn btn-default btn-lg btn-block", :id => "transparent-button" %></div><br>
<% end %>

</div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3"> 

  <h1>User Sign Up</h1>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.telephone_field :phone_number, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => "form-control input-lg" %>
    </div>
    <div class="actions">
      <%= f.hidden_field :is_business, :value => false, :class => "form-control input-lg" %>
      <%= f.hidden_field :lat, :value => 34.0218628, :class => "form-control input-lg" %>
      <%= f.hidden_field :lng, :value => -118.4804206, :class => "form-control input-lg" %>
      <div class="spacer25"></div>
      <%= f.submit "Sign Up", :class => "btn btn-default btn-lg btn-block", :id => "transparent-button" %>
    </div>
  <% end %>

  </div>
</div>


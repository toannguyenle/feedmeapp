<div class="row">
  <div class="wrapper col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3"> 

  <h1>NEW USER SIGN UP</h1>
  <%= form_for @user do |f| %>

    <div class="field">
      <%= f.label :name, 'NAME' %><br />
      <%= f.text_field :name, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :phone_number, 'PHONE NUMBER' %><br />
      <%= f.telephone_field :phone_number, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :email, 'EMAIL' %><br />
      <%= f.email_field :email, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :password, 'PASSWORD' %><br />
      <%= f.password_field :password, :class => "form-control input-lg" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'PASSWORD CONFIRMATION' %><br />
      <%= f.password_field :password_confirmation, :class => "form-control input-lg" %>
    </div>
    <div class="actions">
      <%= f.hidden_field :is_business, :value => false, :class => "form-control input-lg" %>
      <div class="spacer25"></div>
      <%= f.submit "SIGN UP", :class => "btn btn-default btn-lg btn-block", :id => "transparent-button" %><br>
    </div>
  <% end %>

  </div>
</div>


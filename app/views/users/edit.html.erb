    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :lat %><br>
    <%= f.text_field :lat, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :lng %><br>
    <%= f.text_field :lng, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :class => "form-control" %>
  </div>

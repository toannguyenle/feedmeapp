<div class="row">
  <div class="wrapper col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3"> 
    <h1>UPDATE ORDER #<%= @order.id %></h1>
    <small>ordered by </small><%= @order.user.name %> at <%= @order.created_at %><br>
    <small>delivered address </small><%= @order.user.street_address_1 %><br>

    <%= form_for(@order) do |f| %>
      <%= f.label :status, 'STATUS' %>
      <%= f.select :status, ['PROCESSED','EN ROUTE', 'DELIVERED', 'CUSTOMER CANCELLED', 'CANCELLED', 'DELAYED', 'ADDITINAL INFO NEEDED'] %><br>

      <%= f.label :delivery_option, 'DELIVERY OPTION' %>
      <%= f.select :delivery_option, ['Deliver', 'Pick Up', 'Dine In'] %><br>

      <%= f.label :delivered_by, 'DELIVERED BY' %>
      <%= f.select :delivered_by, ['Jack', 'Joe', 'John'] %><br>

      <%= f.label :payment_type, 'PAYMENT TYPE' %>
      <%= f.select :payment_type, ['Credit Card','Cash'] %><br>

      <%= f.label :processing_time, 'PROCESSING TIME' %>
      <%= f.text_field :processing_time, :class => "form-control input-lg" %><br>

      <div class="spacer25"></div>
      <%= f.submit "UPDATE", :class => "btn btn-default btn-lg btn-block", :id => "transparent-button" %>
      <br>
    <% end %>

    <div class="text-center">
      <%= link_to 'Show', @order %> |
      <%= link_to 'Back', orders_path %>
    </div>
  </div>
</div>
<%= form_for(@order, :url => {:action => :add_to_current_order, :controller => :orders, :product => @product}) do |f| %>
  <strong>Name</strong>
  <%= @product.name %><br>
  <strong>Price</strong>
  <%= number_to_currency(@product.regular_price) %><br>
  <strong>from</strong>
  <%= @product.restaurant.name %><br>
  <strong>Ordered by</strong>
  <%= current_user.name %><br>
  <div class="field">
    <%= f.label :product_count %><br>
    <%= f.select :product_count, [1,2,3,4,5]%>
  </div>
  <div class="field">
    <%= f.label :delivery_option %><br>
    <%= f.select :delivery_option, ['Deliver', 'Pick Up', 'Dine In'] %>
  </div>
  <div class="field">
    <%= f.label :payment_type %><br>
    <%= f.select :payment_type, ['Credit Card','Cash'] %>
  </div>
  <div class="field">
    <%= f.label :additional_info %><br>
    <%= f.text_field :additional_info %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', orders_path %>